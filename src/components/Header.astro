---
import HeaderLink from './HeaderLink.astro';
import {SITE_TITLE} from '../consts';

const {pathname} = Astro.url;
const isEnglish = pathname.startsWith('/en');

const homeLink = isEnglish ? '/en' : '/';
const resumeLink = isEnglish ? '/en/about' : '/about';

const langSwitchLabel = isEnglish ? 'ðŸ‡°ðŸ‡· í•œêµ­ì–´' : 'ðŸ‡ºðŸ‡¸ English';
let langSwitchTarget;

if (isEnglish) {
    langSwitchTarget = pathname.replace(/^\/en/, '') || '/';
} else {
    langSwitchTarget = '/en' + (pathname === '/' ? '' : pathname);
}
// Ensure no double slashes
langSwitchTarget = langSwitchTarget.replace(/\/\//g, '/');
---

<header>
    <nav>
        <h2><a href={homeLink}>{SITE_TITLE}</a></h2>
        <div class="internal-links">
            <HeaderLink href={homeLink}>Home</HeaderLink>
            <HeaderLink href={resumeLink}>Resume</HeaderLink>
        </div>
        <div class="right-links">
            <a href={langSwitchTarget} class="lang-switch">{langSwitchLabel}</a>
            <a href="https://github.com/woonge" target="_blank" class="social-link">
                <span class="sr-only">GitHub</span>
                <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32">
                    <path fill="currentColor"
                          d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
                    ></path>
                </svg>
            </a>
        </div>
    </nav>
</header>
<style>
    header {
        margin: 0;
        padding: 0 1em;
        background: white;
        box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    }

    h2 {
        margin: 0;
        font-size: 1.1em;
        font-weight: 700;
    }

    h2 a,
    h2 a.active {
        text-decoration: none;
        color: var(--text-main);
    }

    nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
        max-width: 800px;
        margin: 0 auto;
        padding: 1rem 0;
    }

    nav a {
        padding: 0.5em 0.75em;
        color: var(--text-secondary);
        //border-bottom: 2px solid transparent;
        text-decoration: none;
        font-weight: 500;
        font-size: 0.95rem;
    }

    nav a:hover {
        color: var(--accent);
    }

    nav a.active {
        text-decoration: none;
        color: var(--accent);
    }

    .right-links {
        display: flex;
        align-items: center;
        gap: 1em;
    }

    .social-link {
        display: flex;
        align-items: center;
        color: var(--text-secondary);
        transition: color 0.2s;
        margin-bottom: 1px;
    }

    .social-link:hover {
        color: var(--accent);
    }

    .lang-switch {
        font-size: 0.85em;
        font-weight: 600;
        text-decoration: none;
        color: var(--text-secondary);
        border: 1px solid var(--border);
        padding: 0.25em 0.75em;
        border-radius: 9999px; /* Pill shape */
        transition: all 0.2s;
    }

    .lang-switch:hover {
        background-color: var(--card-hover);
        border-color: var(--accent);
        color: var(--accent);
        text-decoration: none;
    }

    @media (max-width: 640px) {
        nav {
            padding: 1rem;
        }
    }
</style>
